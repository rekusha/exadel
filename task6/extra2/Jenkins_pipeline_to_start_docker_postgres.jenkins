pipeline {
    agent {
        label 'host-main' 
    }
    environment {
        WORK_DIR = './postgres-cluster'
    }
    stages {
      stage(‘Build’) {
        steps {
          dir(WORK_DIR) {
            sh 'ansible-playbook localhost playbook.yml'
            sh 'docker-compose up --build'
          }
        }
      }
    }
}
